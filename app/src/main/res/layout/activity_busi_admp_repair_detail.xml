园区A座4楼，楼道垃圾问题，办公室灰尘较重。希望园区加强管理。"/>

        <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_48"
        android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_208"
            android:background="@color/white"
            android:layout_marginTop="@dimen/px_32"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/px_196"
                android:layout_height="@dimen/px_196"
                android:src="@mipmap/ic_common_head"
                android:layout_marginLeft="@dimen/px_48"/>

            <ImageView
                android:layout_width="@dimen/px_196"
                android:layout_height="@dimen/px_196"
                android:src="@mipmap/ic_common_head"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="@dimen/px_196"
                android:layout_height="@dimen/px_196"
                android:src="@mipmap/ic_common_head"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_48" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_176"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/px_56"
                android:layout_height="@dimen/px_56"
                android:layout_marginLeft="@dimen/px_24"
                android:layout_marginTop="@dimen/px_16"
                android:background="@drawable/circle_head"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/px_16">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_16"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px_24"
                    android:text="启园老大"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/px_24"
                        android:text="今天"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_22"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/px_24"
                        android:text="08：10"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_14"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px_28"
                    android:text="好的，尽快去处理"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_40"
            android:layout_marginTop="@dimen/px_24"
            android:background="@color/white">
            <EditText
                android:id="@+id/et_busi_joinc_parks"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/px_24" />
            <ImageButton
                android:id="@+id/ibn_busi_admp_repair_add"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:layout_marginRight="@dimen/px_48"
                android:layout_alignParentEnd="true"
                android:background="@color/white"
                android:src="@mipmap/ic_discuss_add" />
            <ImageButton
                android:id="@+id/ibn_busi_admp_repair_imoj"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:background="@color/white"
                android:layout_toLeftOf="@+id/ibn_busi_admp_repair_add"
                android:layout_marginLeft="@dimen/px_24"
                android:src="@mipmap/ic_discuss_imoj" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_24"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llayout_item_busi_admp_repir_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_136"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">
            <ImageButton
                android:id="@+id/ibn_busi_admp_repair_photo"
                android:layout_width="@dimen/px_88"
                android:layout_height="@dimen/px_88"
                android:layout_marginLeft="@dimen/px_24"
                android:src="@mipmap/ic_discuss_photo"
                android:background="@color/gray"/>
            <ImageButton
                android:id="@+id/ibn_busi_admp_repair_camera"
                android:layout_width="@dimen/px_88"
                android:layout_height="@dimen/px_88"
                android:layout_marginLeft="@dimen/px_24"
                android:src="@mipmap/ic_discuss_camera"
                android:background="@color/gray"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_busi_admp_repair_accpet"
            android:layout_width="@dimen/px_702"
            android:layout_height="@dimen/px_88"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_32"
            android:background="@drawable/green_bg"
            android:text="@string/business_accpet_btn"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_busi_admp_repair_refuse"
            android:layout_width="@dimen/px_702"
            android:layout_height="@dimen/px_88"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_24"
            android:background="@drawable/light_red_bg"
            android:text="@string/business_refuse_btn"
            android:textColor="@color/white" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_24"/>
    </LinearLayout>

</ScrollView>
