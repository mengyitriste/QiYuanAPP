<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <include layout="@layout/common_toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_64"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_48"
            android:text="@string/business_applicant_info"
            android:textSize="@dimen/px_24"
            android:textColor="@color/dark_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_208"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/px_48"
                android:text="@string/photo"
                android:textColor="@color/black"
                android:textSize="@dimen/px_32"/>
            <ImageView
                android:layout_width="@dimen/px_176"
                android:layout_height="@dimen/px_176"
                android:src="@mipmap/ic_common_head"
                android:layout_marginRight="@dimen/px_24"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_88"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_48"
                android:textColor="@color/black"
                android:textSize="@dimen/px_32"
                android:text="@string/userinfo_username"/>

            <TextView
                android:id="@+id/tv_busi_admp_repair_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_48"
                android:gravity="end"
                android:text="张三"
                android:textColor="@color/light_black"
                android:textSize="@dimen/px_30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_88"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_48"
                android:text="@string/phone"
                android:textColor="@color/black"
                android:textSize="@dimen/px_32" />

            <TextView
                android:id="@+id/tv_busi_admp_repair_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_48"
                android:gravity="end"
                android:text="183-8888-4321"
                android:textColor="@color/light_black"
                android:textSize="@dimen/px_30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_88"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_48"
                android:text="@string/card_company_name"
                android:textColor="@color/black"
                android:textSize="@dimen/px_32" />

            <TextView
                android:id="@+id/tv_busi_admp_repair_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_48"
                android:gravity="end"
                android:text="UXD公司"
                android:textColor="@color/light_black"
                android:textSize="@dimen/px_30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_88"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_48"
                android:text="@string/card_companyroom"
                android:textColor="@color/black"
                android:textSize="@dimen/px_32" />

            <TextView
                android:id="@+id/tv_busi_admp_repair_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_48"
                android:gravity="end"
                android:text="A-301"
                android:textColor="@color/light_black"
                android:textSize="@dimen/px_30" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_64"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_48"
            android:text="@string/business_repair_theme"
            android:textSize="@dimen/px_24"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:id="@+id/tv_busi_admp_repair_theme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_88"
            android:background="@color/white"
            android:paddingLeft="@dimen/px_48"
            android:gravity="center_vertical"
            android:textSize="@dimen/px_28"
            android:textColor="@color/black"
            android:text="园区办公灯光问题"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_64"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_48"
            android:text="@string/business_repair_content"
            android:textSize="@dimen/px_24"
            android:textColor="@color/dark_gray"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_48"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_busi_admp_repair_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/px_48"
            android:paddingRight="@dimen/px_48"
            android:gravity="center_vertical"
            android:textSize="@dimen/px_28"
            android:textColor="@color/black"
            android:text="园区A座4楼，楼道垃圾问题，办公室灰尘较重。希望园区加强管理。园区A座4楼，楼道垃圾问题，办公室灰尘较重。希望园区加强管理。
