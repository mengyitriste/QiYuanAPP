<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:layout_marginTop="@dimen/px_24"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/et_busi_joinc_parks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="@dimen/px_48"
            android:text="@string/business_search"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/px_32" />

        <ImageButton
            android:id="@+id/ibn_busi_joinc_searchpark"
            android:layout_width="@dimen/px_44"
            android:layout_height="@dimen/px_44"
            android:layout_marginRight="@dimen/px_24"
            android:background="@color/white"
            android:src="@mipmap/ic_common_search" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_busi_admp_repair_infos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
