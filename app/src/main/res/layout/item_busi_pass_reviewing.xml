<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_busi_pass_reviewingtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_48"
            android:text="2017-4-30 15:36"
            android:textColor="@color/black"
            android:textSize="@dimen/px_32" />

        <TextView
            android:id="@+id/tv_busi_pass_reviewingdoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_48"
            android:gravity="end"
            android:text="104"
            android:textColor="@color/black"
            android:textSize="@dimen/px_32" />
    </LinearLayout>

</LinearLayout>