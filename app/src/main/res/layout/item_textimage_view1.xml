<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"/>
    <LinearLayout
        android:id="@+id/llayout_item_textimage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_88"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="@dimen/px_48"
            android:paddingRight="@dimen/px_48"
            android:text="@string/login_region"
            android:textSize="@dimen/px_32"/>
        <ImageView
            android:id="@+id/iv_iconchoosed"
            android:layout_width="@dimen/px_36"
            android:layout_height="@dimen/px_36"
            android:layout_marginRight="@dimen/px_24"
            android:src="@mipmap/ic_common_next"
            />
    </LinearLayout>

</LinearLayout>
